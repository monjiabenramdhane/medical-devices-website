generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HeroSlide {
  id                      String                    @id @default(cuid())
  title                   String
  subtitle                String?
  description             String?
  ctaText                 String?
  ctaLink                 String?
  imageUrl                String
  imageAlt                String
  order                   Int                       @default(0)
  isActive                Boolean                   @default(true)
  createdAt               DateTime                  @default(now())
  updatedAt               DateTime                  @updatedAt
  hero_slide_translations hero_slide_translations[]

  @@index([order])
  @@index([isActive])
  @@map("hero_slides")
}

model HomeSection {
  id                        String                      @id @default(cuid())
  sectionKey                String                      @unique
  title                     String
  subtitle                  String?
  content                   String?
  imageUrl                  String?
  imageAlt                  String?
  ctaText                   String?
  ctaLink                   String?
  order                     Int                         @default(0)
  isActive                  Boolean                     @default(true)
  createdAt                 DateTime                    @default(now())
  updatedAt                 DateTime                    @updatedAt
  home_section_translations home_section_translations[]
  products                  Product[]                   @relation("HomeSectionProducts")
  brands                    Brand[]                     @relation("HomeSectionBrands")

  @@index([sectionKey])
  @@index([order])
  @@map("home_sections")
}

model Brand {
  id              String             @id @default(cuid())
  name            String             @unique
  slug            String             @unique
  description     String?
  logoUrl         String
  logoAlt         String
  websiteUrl      String?
  heroImageUrl    String?
  heroImageAlt    String?
  order           Int                @default(0)
  isActive        Boolean            @default(true)
  metaTitle       String?
  metaDescription String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  translations    BrandTranslation[]
  equipmentTypes  EquipmentType[]
  products        Product[]
  homeSections    HomeSection[]      @relation("HomeSectionBrands")

  @@index([slug])
  @@index([isActive])
  @@map("brands")
}

model EquipmentType {
  id            String                     @id @default(cuid())
  name          String
  slug          String
  description   String?
  iconUrl       String?
  heroImageUrl  String?
  heroImageAlt  String?
  order         Int                        @default(0)
  isActive      Boolean                    @default(true)
  brandId       String
  createdAt     DateTime                   @default(now())
  updatedAt     DateTime?                  @updatedAt
  brand         Brand                      @relation(fields: [brandId], references: [id], onDelete: Cascade)
  products      Product[]
  subcategories Subcategory[]
  translations  EquipmentTypeTranslation[]

  @@unique([brandId, slug])
  @@index([brandId])
  @@index([slug])
  @@map("equipment_types")
}

model Subcategory {
  id              String                   @id @default(cuid())
  name            String
  slug            String
  description     String?
  heroImageUrl    String?
  heroImageAlt    String?
  order           Int                      @default(0)
  isActive        Boolean                  @default(true)
  equipmentTypeId String
  createdAt       DateTime                 @default(now())
  updatedAt       DateTime?                @updatedAt
  products        Product[]
  series          Series[]
  translations    SubcategoryTranslation[]
  equipmentType   EquipmentType            @relation(fields: [equipmentTypeId], references: [id], onDelete: Cascade)

  @@unique([equipmentTypeId, slug])
  @@index([equipmentTypeId])
  @@index([slug])
  @@map("subcategories")
}

model Series {
  id            String              @id @default(cuid())
  name          String
  slug          String
  description   String?
  imageUrl      String?
  imageAlt      String?
  order         Int                 @default(0)
  isActive      Boolean             @default(true)
  subcategoryId String?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime?           @updatedAt
  products      Product[]
  translations  SeriesTranslation[]
  subcategory   Subcategory?        @relation(fields: [subcategoryId], references: [id])

  @@unique([subcategoryId, slug])
  @@index([subcategoryId])
  @@index([slug])
  @@map("series")
}

model Product {
  id               String                 @id @default(cuid())
  name             String
  slug             String
  shortDescription String?
  fullDescription  String?
  gamme            Gamme?
  specialty        Specialty?
  heroImageUrl     String
  heroImageAlt     String
  isFeatured       Boolean                @default(false)
  isActive         Boolean                @default(true)
  order            Int                    @default(0)
  metaTitle        String?
  metaDescription  String?
  metaKeywords     String?
  brandId          String
  equipmentTypeId  String?
  subcategoryId    String?
  seriesId         String?
  createdAt        DateTime               @default(now())
  updatedAt        DateTime               @updatedAt
  gallery          ProductImage[]
  sections         ProductSection[]
  specifications   ProductSpecification[]
  translations     ProductTranslation[]
  brand            Brand                  @relation(fields: [brandId], references: [id], onDelete: Cascade)
  equipmentType    EquipmentType?         @relation(fields: [equipmentTypeId], references: [id])
  series           Series?                @relation(fields: [seriesId], references: [id])
  subcategory      Subcategory?           @relation(fields: [subcategoryId], references: [id])
  homeSections     HomeSection[]          @relation("HomeSectionProducts")

  @@unique([brandId, slug])
  @@index([brandId])
  @@index([slug])
  @@index([isFeatured])
  @@index([gamme])
  @@index([specialty])
  @@map("products")
}

model ProductImage {
  id        String   @id @default(cuid())
  url       String
  alt       String
  order     Int      @default(0)
  productId String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([order])
  @@map("product_images")
}

model ProductSection {
  id        String   @id @default(cuid())
  title     String
  content   String
  imageUrl  String?
  imageAlt  String?
  order     Int      @default(0)
  productId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([order])
  @@map("product_sections")
}

model ProductSpecification {
  id        String   @id @default(cuid())
  category  String
  name      String
  value     String
  order     Int      @default(0)
  productId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([category])
  @@index([order])
  @@map("product_specifications")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          UserRole  @default(USER)
  isActive      Boolean   @default(true)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]

  @@index([email])
  @@index([role])
  @@map("users")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sessionToken])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Translation {
  id        String   @id @default(cuid())
  key       String
  locale    String
  value     String
  category  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([key, locale], name: "key_locale")
  @@index([locale])
  @@index([category])
  @@map("translations")
}

model ProductTranslation {
  id               String   @id @default(cuid())
  productId        String
  locale           String
  name             String
  shortDescription String?
  fullDescription  String?
  metaTitle        String?
  metaDescription  String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  heroImageAlt     String?
  metaKeywords     String?
  product          Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, locale])
  @@index([locale])
  @@map("product_translations")
}

model BrandTranslation {
  id              String   @id @default(cuid())
  brandId         String
  locale          String
  name            String?
  description     String?
  metaTitle       String?
  metaDescription String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  brand           Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)

  @@unique([brandId, locale])
  @@index([locale])
  @@map("brand_translations")
}

model hero_slide_translations {
  id          String    @id @default(cuid())
  heroSlideId String
  locale      String
  title       String
  subtitle    String?
  description String?
  ctaText     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  hero_slides HeroSlide @relation(fields: [heroSlideId], references: [id], onDelete: Cascade)

  @@unique([heroSlideId, locale])
  @@index([locale])
}

model home_section_translations {
  id            String      @id @default(cuid())
  homeSectionId String
  locale        String
  title         String
  subtitle      String?
  content       String
  ctaText       String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  imageUrl      String?
  imageAlt      String?
  home_sections HomeSection @relation(fields: [homeSectionId], references: [id], onDelete: Cascade)

  @@unique([homeSectionId, locale])
  @@index([locale])
}

enum Gamme {
  HIGH
  MEDIUM
  LOW
}

enum Specialty {
  CARDIOLOGY
  GENERALIST
  ORTHOPEDIC
  NEUROLOGY
  OBSTETRICS
  EMERGENCY
  PEDIATRIC
  OTHER
}

enum UserRole {
  ADMIN
  USER
}

model EquipmentTypeTranslation {
  id              String        @id @default(cuid())
  equipmentTypeId String
  locale          String
  name            String
  description     String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  equipmentType   EquipmentType @relation(fields: [equipmentTypeId], references: [id], onDelete: Cascade)

  @@unique([equipmentTypeId, locale])
  @@index([locale])
  @@map("equipment_type_translations")
}

model SubcategoryTranslation {
  id            String      @id @default(cuid())
  subcategoryId String
  locale        String
  name          String
  description   String?
  heroImageAlt  String? 
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  subcategory   Subcategory @relation(fields: [subcategoryId], references: [id], onDelete: Cascade)

  @@unique([subcategoryId, locale])
  @@index([locale])
  @@map("subcategory_translations")
}

model SeriesTranslation {
  id          String   @id @default(cuid())
  seriesId    String
  locale      String
  name        String
  description String?
  imageAlt    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  series      Series   @relation(fields: [seriesId], references: [id], onDelete: Cascade)

  @@unique([seriesId, locale])
  @@index([locale])
  @@map("series_translations")
}

model FooterConfig {
  id           String                    @id @default(cuid())
  email        String?
  phone        String?
  facebookUrl  String?
  twitterUrl   String?
  linkedinUrl  String?
  instagramUrl String?
  createdAt    DateTime                  @default(now())
  updatedAt    DateTime                  @updatedAt
  translations FooterConfigTranslation[]
  sections     FooterSection[]

  @@map("footer_configs")
}

model FooterConfigTranslation {
  id                 String       @id @default(cuid())
  footerConfigId     String
  locale             String
  name               String?      @db.Text
  address            String?      @db.Text
  companyDescription String?      @db.Text
  copyrightText      String?
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  footerConfig       FooterConfig @relation(fields: [footerConfigId], references: [id], onDelete: Cascade)

  @@unique([footerConfigId, locale])
  @@index([locale])
  @@map("footer_config_translations")
}

model FooterSection {
  id             String                     @id @default(cuid())
  footerConfigId String
  order          Int                        @default(0)
  isActive       Boolean                    @default(true)
  createdAt      DateTime                   @default(now())
  updatedAt      DateTime                   @updatedAt
  footerConfig   FooterConfig               @relation(fields: [footerConfigId], references: [id], onDelete: Cascade)
  translations   FooterSectionTranslation[]
  links          FooterLink[]

  @@index([footerConfigId])
  @@index([order])
  @@map("footer_sections")
}

model FooterSectionTranslation {
  id              String        @id @default(cuid())
  footerSectionId String
  locale          String
  title           String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  footerSection   FooterSection @relation(fields: [footerSectionId], references: [id], onDelete: Cascade)

  @@unique([footerSectionId, locale])
  @@index([locale])
  @@map("footer_section_translations")
}

model FooterLink {
  id              String                  @id @default(cuid())
  footerSectionId String
  url             String
  order           Int                     @default(0)
  isActive        Boolean                 @default(true)
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt
  footerSection   FooterSection           @relation(fields: [footerSectionId], references: [id], onDelete: Cascade)
  translations    FooterLinkTranslation[]

  @@index([footerSectionId])
  @@index([order])
  @@map("footer_links")
}

model FooterLinkTranslation {
  id           String     @id @default(cuid())
  footerLinkId String
  locale       String
  label        String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  footerLink   FooterLink @relation(fields: [footerLinkId], references: [id], onDelete: Cascade)

  @@unique([footerLinkId, locale])
  @@index([locale])
  @@map("footer_link_translations")
}
